@using System.Web.Script.Services
@using System.Web.UI.WebControls

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@*<link href="@Url.Content("~/Content/Login/Css/LoginTemplate.css")" rel="stylesheet" type="text/css" />*@



@section AddToHead{
    <link href="@Url.Content("~/Content/Login/Css/LoginTemplate.css")" rel="stylesheet" type="text/css" />
}
@section AddToFooter{
    <script src="~/Content/Login/Scripts/LoginTemplate.js"></script>
<script src="~/Content/CRUD/Login/Login.js"></script>
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div id="login-form" style="display: block;">
                                <h2>Giriş</h2>
                                <div class="form-group">
                                    <input type="text" name="email" id="email" tabindex="1" class="form-control" placeholder="Email" value="">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Şifre">
                                </div>
                                <div class="col-xs-6 form-group pull-right">
                                    <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Giriş Yap">
                                </div>
                            </div>
                            <div id="register-form" style="display: none;">
                                <h2>Kişisel Bilgiler</h2>
                                <div class="form-group">
                                    <input type="text" name="name_surname" id="reName_Surname" tabindex="1" class="form-control" placeholder="Ad Soyad" value="">
                                </div>
                                <div class="form-group">
                                    <input type="email" name="email" id="reEmail" tabindex="1" class="form-control" placeholder="Email" value="">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" id="rePassword" tabindex="2" class="form-control" placeholder="Şifre">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="confirm-password" id="reConfirm-password" tabindex="2" class="form-control" placeholder="Şifre Tekrar">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Tamamla">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6 tabs">
                            <a href="#" class="active" id="login-form-link"><div class="login">Giriş</div></a>
                        </div>
                        <div class="col-xs-6 tabs">
                            <a href="#" id="register-form-link"><div class="register">Üye Ol</div></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
